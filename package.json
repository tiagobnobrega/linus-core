{
  "name": "linus-core",
  "version": "0.0.1",
  "description": "Lean Intelligent Understanding System",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:js && npm run lint:pretty",
    "lint:pretty": "npx prettier --single-quote --trailing-comma es5 --write ./src/*.js",
    "lint:js": "npx eslint --fix ./src/*.js",
    "build": "npm run build:split && npm run build:unified",
    "build:split": "webpack",
    "build:unified": "webpack --config webpack.unified.config"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "keywords": [
    "chatbot",
    "linus"
  ],
  "author": "Tiago Nobrega",
  "license": "ISC",
  "jest": {
    "coverageDirectory": "./docs/coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/utils/test/"
    ]
  },
  "devDependencies": {
    "add": "^2.0.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "8",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "dotenv": "^6.0.0",
    "eslint": "4.x",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "yarn": "^1.6.0"
  },
  "dependencies": {
    "babel-plugin-add-module-exports": "^0.2.1",
    "debug": "^3.1.0",
    "eventemitter3": "^3.1.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "watson-developer-cloud": "^3.5.3"
  }
}
